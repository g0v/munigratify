{
  "name": "PPT",
  "version": "0.0.1",
  "description": "Political Promise Tracker",
  "url": "https://github.com/g0v/ppt",
  "email": "navyblueshellingford@gmail.com",
  "main": "server/server.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:g0v/ppt.git"
  },
  "scripts": {
    "clean": "rm -f client/build/*",
    "// build": "Generates production assets.",
    "build:webpack": "webpack --config client/config/webpack.js --json > tmp/webpack-stats.json",
    "build": "npm run clean && NODE_ENV=production npm run build:webpack",
    "// start": "Start development server",
    "start": "parallelshell 'npm run start:server' 'npm run start:client'",
    "start:server": "DEBUG=ppt:* PORT=$npm_package_config_apiServerPort nodemon -w client -w server -w common -e js,jsx server/server.js",
    "start:client": "webpack-dev-server --config client/config/webpack.js",
    "// deploy": "Depoly steps, which creates a branch named _deploy, builds and commits compiled project, and pushes to Heroku.",
    "deploy:init": "git checkout -b _deploy && echo '!client/build' >> .gitignore && echo '!tmp/webpack-stats.json' >> .gitignore",
    "deploy:commit": "_COMMIT_MSG=$(git log -n 1 --pretty=format:'%h - %s') && git add .gitignore client/build tmp/webpack-stats.json && git commit -m \"$_COMMIT_MSG\"",
    "deploy:push": "git push --force heroku _deploy:master",
    "deploy:cleanup": "git checkout - && git branch -D _deploy",
    "deploy": "npm run deploy:init && npm run build && npm run deploy:commit && npm run deploy:push && npm run deploy:cleanup",
    "// database-related": "Database related commands",
    "migrate": "sequelize db:migrate",
    "seed": "sequelize db:migrate:undo:all && npm run migrate && babel-node --debug --stage 1 -- ./server/scripts/seed-mock-data.js",
    "seed:commitment": "sequelize db:migrate:undo:all && npm run migrate && babel-node --debug --stage 1 -- ./server/scripts/seed-commitment-data.js",
    "// test": "test-related command",
    "test": "NODE_ENV=test `npm bin`/mocha --compilers js:babel/register --recursive",
    "test:watch": "NODE_ENV=test `npm bin`/mocha --compilers js:babel/register --recursive --watch"
  },
  "config": {
    "webpackDevServerPort": 5000,
    "apiServerPort": 9527
  },
  "dependencies": {
    "babel": "^5.4.7",
    "babel-eslint": "^4.0.5",
    "babel-loader": "^5.1.3",
    "babel-runtime": "^5.8.5",
    "body-parser": "^1.12.4",
    "cookie-parser": "^1.3.4",
    "cookie-session": "^1.2.0",
    "debug": "^2.1.3",
    "express": "^4.12.3",
    "express-flash": "0.0.2",
    "fluxible": "^0.4.10",
    "fluxible-router": "^0.1.7",
    "isomorphic-fetch": "^2.0.2",
    "jade": "^1.10.0",
    "material-ui": "^0.10.2",
    "morgan": "^1.5.3",
    "newrelic": "^1.19.2",
    "object-assign": "^2.0.0",
    "passport": "^0.2.2",
    "passport-facebook": "^2.0.0",
    "passport-google-oauth": "^0.2.0",
    "percentify": "^0.1.0",
    "pg": "^4.3.0",
    "pg-hstore": "^2.3.2",
    "react": "^0.13.1",
    "react-autolink-text": "^1.0.2",
    "react-inlinesvg": "^0.4.1",
    "react-tap-event-plugin": "^0.1.7",
    "react-transmit": "^2.5.4",
    "sequelize": "^3.1.1",
    "sequelize-cli": "^1.7.0",
    "serialize-javascript": "^1.0.0",
    "serve-favicon": "^2.0.1",
    "shelljs": "^0.4.0"
  },
  "devDependencies": {
    "chai": "^3.2.0",
    "css-loader": "^0.15.6",
    "csv-parse": "^0.1.3",
    "eslint": "^1.0.0",
    "eslint-config-airbnb": "0.0.7",
    "eslint-plugin-react": "^3.1.0",
    "extract-text-webpack-plugin": "^0.3.8",
    "file-loader": "^0.8.1",
    "jsdom": "^6.0.1",
    "jsx-loader": "^0.12.2",
    "mocha": "^2.2.5",
    "mocha-jsdom": "^1.0.0",
    "nib": "^1.1.0",
    "node-env-file": "^0.1.7",
    "nodemon": "^1.2.1",
    "parallelshell": "^1.1.1",
    "sinon": "^1.15.4",
    "socket.io-client": "MrOrz/socket.io-client",
    "stylus": "^0.50.0",
    "stylus-loader": "^1.0.0",
    "url-loader": "^0.5.6",
    "webpack": "^1.7.0",
    "webpack-dev-server": "^1.8.2"
  },
  "engines": {
    "node": "0.10.x"
  }
}
